@page "/"

<PageTitle>HR Job Portal - Home</PageTitle>

<div class="container mt-4">
    <div class="jumbotron">
        <h1 class="display-4">Welcome to HR Job Portal</h1>
        <p class="lead">Find your dream job or post new opportunities for talented professionals.</p>
        <hr class="my-4">
        <p>Browse through our active job listings and apply with your profile information.</p>
        <a class="btn btn-primary btn-lg" href="jobs" role="button">Browse Jobs</a>
        <a class="btn btn-secondary btn-lg" href="profile" role="button">Update Profile</a>
    </div>

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Create Your Profile</h5>
                    <p class="card-text">Set up your professional profile with education history and resume.</p>
                    <a href="profile" class="btn btn-primary">Go to Profile</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Browse Jobs</h5>
                    <p class="card-text">Explore active job listings and find opportunities that match your skills.</p>
                    <a href="jobs" class="btn btn-primary">View Jobs</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Track Applications</h5>
                    <p class="card-text">Monitor the status of your job applications in one place.</p>
                    <a href="my-applications" class="btn btn-primary">My Applications</a>
                </div>
            </div>
        </div>
    </div>
</div>
